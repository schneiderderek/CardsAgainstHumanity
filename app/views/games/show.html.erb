<div class="page-header">
  <h1><%= @game.name %> <small><%= pluralize(@game.users.count, "player") %> in this game</small></h1>
</div>

<h2>Deck: <%= @game.deck.name %></h2>
<br>
<h2>White Cards:</h2>
<table class="table table-striped table-hover">
  <tr><th>Name</th><th>Name</th><th>Name</th></tr>

  <% cards = @game.deck.white_cards %>

  <% for x in 0...(cards.length - 2) %>
  <tr>
    <td><%= cards[x].content %></td>
    <td><%= cards[x+=1].content %></td>
    <td><%= cards[x+=1].content %></td>
  </tr>
  <% end %>

</table>
<br>
<table class="table table-striped table-hover">
  <tr><th>Name</th><th>Name</th><th>Name</th></tr>

  <% cards = @game.deck.black_cards %>

  <% for x in 0...(cards.length - 2) %>
  <tr>
    <td><%= cards[x].content %></td>
    <td><%= cards[x+=1].content %></td>
    <td><%= cards[x+=1].content %></td>
  </tr>
  <% end %>
</table>
<br>

<%= link_to 'Back', games_path %>
