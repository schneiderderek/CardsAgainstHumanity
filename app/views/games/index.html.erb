<div class="page-header">
  <h1>Current Games <small>There are currently <%= @games.length %> games available <span class="pull-right"><%= link_to 'Start a New Game', new_game_path, class: "btn btn-success btn-lg" %></span></small></h1>
</div>

<table class="table table-striped table-hover">
  <tr>
    <th>Game ID#</th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


