<div class="page-header">
  <h1>Current Games <small>There are currently <%= pluralize(@games.count, "game") %> available <span class="pull-right"><%= link_to 'Start a New Game', new_game_path, class: "btn btn-success btn-lg" %></span></small></h1>
</div>

<table class="table table-striped table-hover">
  <tr>
    <th>Game Name</th>
    <th># of Players</th>
    <th>Max # of Players</th>
    <th>Join Game</th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= link_to game.name, game %></td>
    <td><%= game.players %></td>
    <td><%= game.max_players %></td>
    <td><%= link_to "Join", "", class: "btn btn-primary" %></td>
  </tr>
<% end %>
</table>

<br />


